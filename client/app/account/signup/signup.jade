div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-sm-12
      h1 Sign up

    .col-sm-12
      form.form(
        name='form',
        on-valid-submit="loginOauth('stripe')"
        )
        .form-group(ng-class='{ "has-success": form.first.$valid && submitted,\
        "has-error": form.first.$invalid && submitted }')
          label First Name
          input.form-control(type='text', name='first', ng-model='user.first', required='')
          p.help-block(ng-show='form.first.$error.required && submitted')
            | A first name is required

        .form-group(ng-class='{ "has-success": form.last.$valid && submitted,\
        "has-error": form.last.$invalid && submitted }')
          label Last Name
          input.form-control(type='text', name='last', ng-model='user.last', required='')
          p.help-block(ng-show='form.last.$error.required && submitted')
            | A last name is required

        .form-group(ng-class='{ "has-success": form.email.$valid && submitted,\
        "has-error": form.email.$invalid && submitted }')
          label Email
          input.form-control(type='email', name='email', ng-model='user.email', required='', mongoose-error='')
          p.help-block(ng-show='form.email.$error.email && submitted')
            | Doesn't look like a valid email.
          p.help-block(ng-show='form.email.$error.required && submitted')
            | What's your email address?
          p.help-block(ng-show='form.email.$error.mongoose')
            | {{ errors.email }}

        .form-group(ng-class='{ "has-success": form.tel.$valid && submitted,\
        "has-error": form.tel.$invalid && submitted }')
          label Telephone Number
          input.form-control(type='tel', name='tel', ng-model='user.tel', required='', mongoose-error='')
          p.help-block(ng-show='form.tel.$error.tel && submitted')
            | Doesn't look like a valid telephone number.
          p.help-block(ng-show='form.tel.$error.required && submitted')
            | What's your telephone number?
          p.help-block(ng-show='form.tel.$error.mongoose')
            | {{ errors.tel }}


        .form-group(ng-class='{ "has-success": form.tel.$valid && submitted,\
        "has-error": form.tel.$invalid && submitted }')
          label Telephone Number ###-###-####
          input.form-control(type='tel', name='tel', ng-model='user.tel', required='', mongoose-error='')
          p.help-block(ng-show='form.tel.$error.tel && submitted')
            | Doesn't look like a valid telephone number.
          p.help-block(ng-show='form.tel.$error.required && submitted')
            | What's your telephone number?
          p.help-block(ng-show='form.tel.$error.mongoose')
            | {{ errors.tel }}

